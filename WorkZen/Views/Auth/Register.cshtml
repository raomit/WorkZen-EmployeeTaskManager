
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginSignupLayout.cshtml";
}
@model WorkZen.Models.Employee

@if (@Model != null)
{
    <div class="container-scroller">
        
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/Content/assets/images/workzenlogo.png">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <form class="pt-3 needs-validation" id="registrationForm" method="post" action="/Auth/Register" novalidate>
                                <div class="form-group form-input-group">
                                    <label for="firstName">First Name</label>
                                    <input value="@Model.firstName" type="text" name="firstName" class="form-control form-control-lg" id="firstName" placeholder="First Name" required>
                                    <div class="invalid-feedback">
                                        Please enter First Name.
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good.
                                    </div>
                                </div>
                                <div class="form-group form-input-group">
                                    <label for="lastName">Last Name</label>
                                    <input value="@Model.lastName" type="text" name="lastName" class="form-control form-control-lg" id="lastName" placeholder="Last Name" required>
                                    <div class="invalid-feedback">
                                        Please enter Last Name.
                                    </div>
                                    <div class="valid-feedback">
                                        Looks good.
                                    </div>
                                </div>
                                <div class="form-group form-input-group">
                                    <label for="email">Email</label>
                                    <input value="@Model.email" type="email" name="email" class="form-control form-control-lg" id="email" placeholder="Email" required>
                                    @if (ViewBag.error != null)
                                    {
                                        <div class="invalid-feedback" style="display: block !important">
                                            @ViewBag.error
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="invalid-feedback">
                                            Please enter Valid Email.
                                        </div>
                                    }
                                    <div class="valid-feedback">
                                        Looks good.
                                    </div>
                                </div>
