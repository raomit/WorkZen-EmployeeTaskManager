
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginSignupLayout.cshtml";
}

@model WorkZen.Models.Employee

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            <img src="~/Content/assets/images/workzenlogo.png">
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <form class="pt-3" action="/Auth/Login" method="POST">
                            <div class="form-group">
                                @if (ViewBag.email != null)
                                {
                                    <input name="email" type="email" class="form-control form-control-lg" id="email" placeholder="email" value="@ViewBag.email">
                                }
                                else
                                {
                                    <input name="email" type="email" class="form-control form-control-lg" id="email" placeholder="email">
                                }

                            </div>
                            <div class="form-group">
                                @if (ViewBag.password != null)
                                {
                                    <input name="password" type="password" class="form-control form-control-lg" id="password" placeholder="password" value="@ViewBag.password">
                                }
                                else
                                {
                                    <input name="password" type="password" class="form-control form-control-lg" id="password" placeholder="password">
                                }

                            </div>
                            <div class="mt-3 d-grid gap-2">
                                @if(ViewBag.error != null)
                                {
                                    <div class="invalid-feedback" style="display: block !important">
                                        @ViewBag.error
                                    </div> 
                                }
                                <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
                            </div>
                            @*<div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input"> Keep me signed in
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-primary">Forgot password?</a>
                            </div>*@
                            @*<div class="mb-2 d-grid gap-2">
                                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                    <i class="mdi mdi-facebook me-2"></i>Connect using facebook
                                </button>
                            </div>*@
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a href="/Auth/Register" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

